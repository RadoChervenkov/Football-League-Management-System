@model FLMS.Web.Areas.Management.ViewModels.Match.MatchInputModel

@using (Html.BeginForm("Create", "Match", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.LeagueId, Model.LeagueId)
    @Html.ValidationSummary(true)
    <div class="form-group">
        <p>Home team</p>
        @Html.DropDownListFor(m => m.HomeTeamId, Model.SelectableTeams, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.HomeTeamId)
    </div>
    <div class="form-group">
        <p>Away team</p>
        @Html.DropDownListFor(m => m.AwayTeamId, Model.SelectableTeams, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AwayTeamId)
    </div>
    <div class="form-group">
        @Html.Kendo().DatePickerFor(m => m.Date).Name("date").Min(DateTime.Now).Value(DateTime.Now)
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}