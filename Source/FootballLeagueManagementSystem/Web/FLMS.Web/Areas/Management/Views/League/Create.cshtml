@model FLMS.Web.Areas.Management.ViewModels.League.LeagueInputModel
@{
    ViewBag.Title = "Create league";
}

<h2>@ViewBag.Title</h2>

@using (@Html.BeginForm("Create", "League", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SeasonId)
        @Html.DropDownListFor(m => m.SeasonId, Model.SelectableSeasons, new { @class = "form-control" })
    </div>
    <input type="submit" value="Create" class="btn btn-primary "/>
}