@model FLMS.Web.Areas.Administration.ViewModels.League.LeagueInputModel
@{
    ViewBag.Title = "Create league";
}

<h2>ViewBag.Title</h2>

@using (@Html.BeginForm("Create", "League", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Season)
        @Html.DropDownListFor(m => m.Season, Model.SelectableSeasons, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary "/>
}