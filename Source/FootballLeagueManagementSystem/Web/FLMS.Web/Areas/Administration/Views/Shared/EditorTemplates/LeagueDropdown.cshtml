@(Html.Kendo()
      .DropDownList()
      .Name("LeagueId") // Name of the widget should be the same as the name of the property
      .DataValueField("Id") // The value of the dropdown is taken from the EmployeeID property
      .DataTextField("Name") // The text of the items is taken from the EmployeeName property
      .OptionLabel("Choose league")
      .BindTo((System.Collections.IEnumerable)ViewData["leagues"]) // A list of all employees which is populated in the controller
      .HtmlAttributes(new { data_value_primitive = true })
)

